{
  "manifest_version": 3,
  "name": "Peakbagger GPX Ascent Logger",
  "version": "0.0.1",
  "description": "Automatically draft ascent records using GPX files on Peakbagger.com",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["tabs", "scripting", "storage"],
  "host_permissions": [
    "https://peakbagger.com/*"
  ],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://peakbagger.com/*"],
      "js": ["gpx-utils.js", "content.js"]
    }
  ]
}
