{
  "manifest_version": 3,
  "name": "Peakbagger GPX Ascent Logger",
  "version": "1.0",
  "description": "Automatically fill Peakbagger ascent form using GPX data",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://www.peakbagger.com/*",
    "https://peakbagger.com/*"
  ],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["https://www.peakbagger.com/*", "https://peakbagger.com/*"],
    "js": ["content.js"]
  }]
}
